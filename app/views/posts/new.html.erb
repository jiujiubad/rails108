<h2 class="text-center">写短评</h2>

<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@group,@post] do |f| %>
    <div class="form-group">
      <%= f.input :content, label:"简短评论", input_html: { class: "form-control"} %>
    </div>
    <div class="form-actions">
      <%= f.submit "保存", disable_with: "Submiting...", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
